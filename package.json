{
  "name": "plowshare-website",
  "version": "1.0.0",
  "description": "Marketing website for Plowshare â€” an on-demand snow plowing service",
  "private": true,
  "scripts": {
    "test": "npx playwright test",
    "minify:css": "npx cleancss -o css/styles.min.css css/styles.css",
    "minify:js": "npx uglifyjs js/main.js -c -m -o js/main.min.js",
    "minify": "npm run minify:css && npm run minify:js",
    "build": "npm run minify",
    "serve": "npx serve -p 3000",
    "watch:css": "chokidar \"css/styles.css\" -c \"npm run minify:css\"",
    "watch:js": "chokidar \"js/main.js\" -c \"npm run minify:js\"",
    "dev": "npm run build && concurrently -n \"css,js,server\" -c \"yellow,cyan,green\" \"npm run watch:css\" \"npm run watch:js\" \"npm run serve\""
  },
  "keywords": ["snow plowing", "snow removal", "on-demand", "plowshare"],
  "author": "Plowshare",
  "license": "UNLICENSED",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.3",
    "concurrently": "^9.1.2",
    "serve": "^14.2.5",
    "uglify-js": "^3.19.3"
  },
  "dependencies": {
    "lucide": "^0.563.0"
  }
}
